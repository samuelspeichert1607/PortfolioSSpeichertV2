{
	return this->ID < objetDeJeu.ID;
}

bool ObjetDeJeu::operator >(const ObjetDeJeu& objetDeJeu)
{
	return this->ID > objetDeJeu.ID;
}

bool ObjetDeJeu::operator >= (const ObjetDeJeu& objetDeJeu)
{
	return this->ID >= objetDeJeu.ID;
}

bool ObjetDeJeu::operator <= (const ObjetDeJeu& objetDeJeu)
{
	return this->ID <= objetDeJeu.ID;
}

bool ObjetDeJeu::operator == (const ObjetDeJeu& objetDeJeu)
{
	return this->ID == objetDeJeu.ID;
}

bool ObjetDeJeu::operator != (const ObjetDeJeu& objetDeJeu)
{
	return this->ID != objetDeJeu.ID;
}