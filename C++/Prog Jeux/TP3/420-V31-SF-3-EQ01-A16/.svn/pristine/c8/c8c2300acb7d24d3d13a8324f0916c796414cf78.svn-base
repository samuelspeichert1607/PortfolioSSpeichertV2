Minion::~Minion()
{
	if (target != nullptr)
	{
		delete target;
	}
	Vector2f * temp = ordreAAttaquer.Pop();
	do
	{
		if (temp != nullptr)
		{
			delete temp;
		}
		temp = ordreAAttaquer.Pop();
	} while (temp != NULL);
}

