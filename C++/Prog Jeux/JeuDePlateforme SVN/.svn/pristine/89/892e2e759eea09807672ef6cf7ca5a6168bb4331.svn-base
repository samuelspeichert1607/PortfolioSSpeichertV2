void Player::deplacement(bool direction)
{
	if (direction == true)
	{
		setPosition(getPosition().x + VITESSE, getPosition().y);
	}
	else if (direction == false)
	{
		setPosition(getPosition().x - VITESSE, getPosition().y);
	}
}

void Player::jump()
{
	setPosition(getPosition().x, getPosition().y - SAUT_VITESSE);
}
